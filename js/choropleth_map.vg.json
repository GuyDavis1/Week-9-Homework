{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "COVID-19 Active Cases (10 Oct 2020)",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/GuyDavis1/Week-9-Homework/main/data/output_smol.topojson",
    "format": {
          "type": "topojson",
          "feature": "vic_localities"
        }
  },
  "transform": [{
      "lookup": "properties.LOC_NAME",
      "from": {
        "data": {
          "url": "https://github.com/GuyDavis1/Week-9-Homework/blob/main/data/eda_summary.csv"
        },
        "key": "burbs",
        "fields": ["Median"]
      }
    },
    {"calculate": "datum.median + 0.1", "as": "median rent"}
  ],
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape",
    "stroke": "white"},
    
  "encoding": {
    "color": {
      "field": "median",
      "type": "quantitative",
      "scale": {"type": "log"}
    },
    "tooltip": [
      {"field": "properties.LOC_NAME", "type": "nominal", "title": "Country"},
      {"field": "Active", "type": "quantitative"}
    ]
  }

}
